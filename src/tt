#!/usr/bin/env python3
# -*- coding: UTF-8 -*-

import sys
import curses
import requests
import locale
import time
import re
import os

from datetime import datetime
from json import loads

# Teletekst baseURL
TELETEKST = 'https://teletekst-data.nos.nl/json/%s'
TTRC = os.path.expanduser('~/.ttrc')

opt_charset = 'braille'
opt_auto_refresh = True
opt_refresh_interval = 15
opt_double_width = False

# Tested with python2.7 and python3.5
from html.parser import HTMLParser
import configparser as ConfigParser
unichr = chr
import html as html_funcs
html = HTMLParser()

tt_re = re.compile(u'([\U0000f020-\U0000f100])')
wc_re = re.compile(u'([\U00000020-\U0000007f])')
locale.setlocale(locale.LC_ALL, '')


# Map teletext graphics (2x3) to braille (2x4)
#
#  01 02      01 08
#  04 08 ==>  02 10
#  10 20      04 20
#             40 80

tt_to_br = {
    0x01: 0x03, 0x02: 0x18, 0x04: 0x06,
    0x08: 0x30, 0x10: 0x44, 0x20: 0xa0,
}

tt_to_br_wide = [
    { 0x01: 0x1b, 0x04: 0x36, 0x10: 0xe4 },
    { 0x02: 0x1b, 0x08: 0x36, 0x20: 0xe4 },
]

colors_fg = {
    'blue': curses.COLOR_BLUE,
    'cyan': curses.COLOR_CYAN,
    'green': curses.COLOR_GREEN,
    'magenta': curses.COLOR_MAGENTA,
    'red': curses.COLOR_RED,
    'white': curses.COLOR_WHITE,
    'yellow': curses.COLOR_YELLOW,
}

colors_bg = {
    'bg-blue': curses.COLOR_BLUE,
    'bg-cyan': curses.COLOR_CYAN,
    'bg-green': curses.COLOR_GREEN,
    'bg-magenta': curses.COLOR_MAGENTA,
    'bg-red': curses.COLOR_RED,
    'bg-white': curses.COLOR_WHITE,
    'bg-yellow': curses.COLOR_YELLOW,
}

bookmarks = {
    '!': '100', '@': '200', '#': '300', '$': '400',
    '%': '500', '^': '600', '&': '700', '*': '800',
}

def load(page):
    # Add time to url to avoid caching
    url = (TELETEKST % page) + "?" + str(time.time())
    response = requests.get(url)
    if not response.status_code == 200:
        return {}
    content = loads(response.content.decode('utf-8'))
    return content


def braille_graph(c):
    n = ord(c.group(1)) - 0xf020
    if n >= 64: n = n - 32
    o = ""
    if opt_double_width:
        for w in tt_to_br_wide:
            m = 0
            for v in w:
                if n & v: m = m | w[v]
            o = o + unichr(0x2800 + m)
    else:
        m = 0
        for v in tt_to_br:
            if n & v: m = m | tt_to_br[v]
        o = o + unichr(0x2800 + m)
    return o

def block_graph(c):
    n = ord(c.group(1)) - 0xf020
    if n >= 64: n = n - 32
    o = ""
    m = 0
    for v in tt_to_br:
        if n & v: m = m | tt_to_br[v]

    chars = {
        0:   0x2800,
        3:   0x2598, # â ƒ
        7:   0x258E, # â ‡
        24:  0x259D, # â ˜
        27:  0x2580, # â ›
        30:  0x259E, # â ž
        31:  0x259B, # â Ÿ
        51:  0x259A, # â ³
        54:  0x2580, # â ¶
        55:  0x2599, # â ·
        56:  0x259D, # â ¸
        59:  0x259C, # â »
        63:  0x2580, # â ¿
        68:  0x2596, # â¡„
        70:  0x258C, # â¡†
        71:  0x258C, # â¡‡
        94:  0x259E, # â¡ž
        95:  0x259B, # â¡Ÿ
        116: 0x259E, # â¡´
        118: 0x259B, # â¡¶
        124: 0x259E, # â¡¼
        126: 0x259E, # â¡¾
        127: 0x259B, # â¡¿
        160: 0x2597, # â¢ 
        167: 0x259A, # â¢§
        176: 0x2590, # â¢°
        182: 0x259C, # â¢¶
        184: 0x2590, # â¢¸
        187: 0x259C, # â¢»
        190: 0x259E, # â¢¾
        191: 0x259C, # â¢¿
        228: 0x2584, # â£¤
        230: 0x2599, # â£¦
        231: 0x2599, # â£§
        244: 0x2584, # â£´
        246: 0x2588, # â£¶
        247: 0x2588, # â£·
        252: 0x259F, # â£¼
        254: 0x259F, # â£¾
        255: 0x2588, # â£¿
    }

    o = unichr(chars.get(m, 0x2800 + m))

    if opt_double_width:
        o += o

    return o

def legacy_graph(c):
    n = ord(c.group(1)) - 0xf020
    if n >= 64: n = n - 32

    chars = {
        0b000000: 0x2800,  # EMPTY
        0b000001: 0x1FB00, # ðŸ¬€ BLOCK SEXTANT 1
        0b000010: 0x1FB01, # ðŸ¬ BLOCK SEXTANT 2
        0b000011: 0x1FB02, # ðŸ¬‚ BLOCK SEXTANT 12
        0b000100: 0x1FB03, # ðŸ¬ƒ BLOCK SEXTANT 3
        0b000101: 0x1FB04, # ðŸ¬„ BLOCK SEXTANT 13
        0b000110: 0x1FB05, # ðŸ¬… BLOCK SEXTANT 23
        0b000111: 0x1FB06, # ðŸ¬† BLOCK SEXTANT 123
        0b001000: 0x1FB07, # ðŸ¬‡ BLOCK SEXTANT 4
        0b001001: 0x1FB08, # ðŸ¬ˆ BLOCK SEXTANT 14
        0b001010: 0x1FB09, # ðŸ¬‰ BLOCK SEXTANT 24
        0b001011: 0x1FB0A, # ðŸ¬Š BLOCK SEXTANT 124
        0b001100: 0x1FB0B, # ðŸ¬‹ BLOCK SEXTANT 34
        0b001101: 0x1FB0C, # ðŸ¬Œ BLOCK SEXTANT 134
        0b001110: 0x1FB0D, # ðŸ¬ BLOCK SEXTANT 234
        0b001111: 0x1FB0E, # ðŸ¬Ž BLOCK SEXTANT 1234
        0b010000: 0x1FB0F, # ðŸ¬ BLOCK SEXTANT 5
        0b010001: 0x1FB10, # ðŸ¬ BLOCK SEXTANT 15
        0b010010: 0x1FB11, # ðŸ¬‘ BLOCK SEXTANT 25
        0b010011: 0x1FB12, # ðŸ¬’ BLOCK SEXTANT 125
        0b010100: 0x1FB13, # ðŸ¬“ BLOCK SEXTANT 35
        0b010101: 0x258C,  # â–Œ LEFT HALF BLOCK
        0b010110: 0x1FB14, # ðŸ¬” BLOCK SEXTANT 235
        0b010111: 0x1FB15, # ðŸ¬• BLOCK SEXTANT 1235
        0b011000: 0x1FB16, # ðŸ¬– BLOCK SEXTANT 45
        0b011001: 0x1FB17, # ðŸ¬— BLOCK SEXTANT 145
        0b011010: 0x1FB18, # ðŸ¬˜ BLOCK SEXTANT 245
        0b011011: 0x1FB19, # ðŸ¬™ BLOCK SEXTANT 1245
        0b011100: 0x1FB1A, # ðŸ¬š BLOCK SEXTANT 345
        0b011101: 0x1FB1B, # ðŸ¬› BLOCK SEXTANT 1345
